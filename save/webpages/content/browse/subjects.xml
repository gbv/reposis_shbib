<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE MyCoReWebPage>

<MyCoReWebPage>

  <section i18n="browse.subjects" xml:lang="all">

    <div class="row">
      <div class="col-md-12">
        <h3>
            <i18n key="browse.subjects" />
        </h3>
      </div>
    </div>
    <form>
      <div class="row">
        <div class="col-md-6">  
          <div class="input-group">
            <input id="subjectSearch_subject" class="form-control subjectSuggest" placeholder="Schlagwort" 
                data-provide="typeahead" data-searchengine="subjectSuggest"
                type="text" autocomplete="off"/>
            <span class="input-group-btn">
              <button id="subjectSearch_submit" class="btn btn-default" type="button">
                <i class="fa fa-search" aria-hidden="true"></i>
              </button>
            </span>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-md-offset-1">  
          <div class="input-group">
            <label class="radio-inline"> <input type="radio" id="subjectSearch-typ-trunc" name="searchtyp" value="trunc" checked="checked" /> beginnt mit</label>
            <label class="radio-inline"> <input type="radio" id="subjectSearch-typ-part" name="searchtyp" value="part" /> Teil von</label>
          </div>
        </div>
      </div>
    </form>
    <div class="row" style="margin-top:15px">
      <div class="col-md-8">  
        <div>
          <ul id="resultList">
          </ul>
          <div id="resultListPagination" class="text-center">
          </div>
        </div>
      </div>
      <div class="col-md-4">
      	<div id="subjectFacets">
      	</div>
      </div>
    </div>
    <script src="../../js/browseSubjects.js" type="text/javascript"></script>
    <script src="../../assets/jquery/plugins/typeahead/bloodhound.js" type="text/javascript"></script>
    <script src="../../assets/jquery/plugins/bootstrap3-typeahead/bootstrap3-typeahead.js" type="text/javascript"></script>
    <script src="../../js/subject-autocomplete.js" type="text/javascript"></script>
    
  </section>

</MyCoReWebPage>